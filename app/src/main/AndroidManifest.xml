<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ereinecke.eatsafe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera"
                  android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- TODO: need a real product icon -->
    <application
        android:name=".util.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.commonsware.cwac.provider.StreamProvider"
            android:authorities="com.ereinecke.eatsafe.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="com.commonsware.cwac.provider.STREAM_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <provider
            android:name=".data.OpenFoodProvider"
            android:authorities="com.ereinecke.eatsafe"
            android:exported="false" />

        <service
            android:name=".services.OpenFoodService"
            android:exported="false" >
        </service>

        <receiver
            android:name=".widget.EatSafeWidgetProvider"
            android:icon="@drawable/openfoodfacts_logo_356"
            android:label="@string/widget_name"  >
            <intent-filter>
                <action android:name="@string/widget_action" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/eatsafe_widget_info"  />
        </receiver>

    <!-- TODO: Add ACTION-VIEW intent filter for App Indexing -->

    </application>

</manifest>